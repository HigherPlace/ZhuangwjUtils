<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旧车"
        android:textSize="22sp"
        android:textColor="@color/text_import_color_333333"
        android:layout_centerInParent="true" />

    <FrameLayout
        android:id="@+id/fl_left"
        android:layout_width="@dimen/common_height_titlebar"
        android:layout_height="@dimen/common_height_titlebar"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_arrow_left" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/text_color_4c4c4c"
        android:textSize="17sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:gravity="center"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/fl_right"
        android:layout_width="@dimen/common_height_titlebar"
        android:layout_height="@dimen/common_height_titlebar"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/text_color_4c4c4c"
        android:textSize="17sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:visibility="gone" />

    <View
        android:id="@+id/bottom_divider"
        style="@style/HorizontalLineViewStyle"
        android:layout_alignParentBottom="true" />

</RelativeLayout>