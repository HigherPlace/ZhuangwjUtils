<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- titleview属性 -->
    <declare-styleable name="TitleViewAttr">
        <attr name="titleHeight" format="dimension" />
        <attr name="tvtitle" format="string" />
        <attr name="tvtitleSize" format="dimension" />
        <attr name="titleColor" format="color|reference" />

        <attr name="leftIcon" format="reference" />
        <attr name="showLeftIcon" format="boolean" />
        <attr name="leftIconSize" format="dimension" />
        <attr name="leftIconWidth" format="dimension" />
        <attr name="leftIconHeight" format="dimension" />

        <attr name="rightIcon" format="reference" />
        <attr name="rightIconSize" format="dimension" />
        <attr name="rightIconWidth" format="dimension" />
        <attr name="rightIconHeight" format="dimension" />

        <attr name="rightMenu" format="string" />
        <attr name="rightMenuSize" format="dimension" />
        <attr name="leftMenu" format="string" />
        <attr name="leftMenuSize" format="dimension" />

        <!-- 是否使用了适配框架 -->
        <attr name="isAuto" format="boolean" />
    </declare-styleable>

</resources>