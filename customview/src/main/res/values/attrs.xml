<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 圆角矩形 -->
    <declare-styleable name="ShapedImageView">
        <attr name="shape_mode" format="enum">
            <enum name="round_rect" value="1" />
            <enum name="circle" value="2" />
        </attr>
        <attr name="round_radius" format="dimension" />
    </declare-styleable>

    <!-- 进度条的属性 -->
    <declare-styleable name="ProgressLayout">
        <attr name="progressLayoutProgressBackground" format="color" />
        <attr name="progressLayoutProgress" format="boolean" />
    </declare-styleable>
</resources>