<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入要写的数据"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_write_internal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="writeInternal"
        android:text="internal模式写入"/>

    <Button
        android:id="@+id/btn_write_external"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="writeExternal"
        android:text="external模式写入"/>

    <Button
        android:id="@+id/btn_write_sdcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="writeSdcard"
        android:text="sdcard模式写入"/>

    <Button
        android:id="@+id/btn_read_internal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="readInternal"
        android:text="internal模式读取"/>

    <Button
        android:id="@+id/btn_read_external"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="readExternal"
        android:text="external模式读取"/>

    <Button
        android:id="@+id/btn_read_sdcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="readSdcard"
        android:text="sdcard模式读取"/>

    <Button
        android:id="@+id/btn_copy_from_assets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="copyFromAssets"
        android:text="copyFromAssets"/>

    <Button
        android:id="@+id/btn_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="copy"
        android:text="copy"/>


</LinearLayout>
